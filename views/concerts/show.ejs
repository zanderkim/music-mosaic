<%- include('../partials/header') %>

<section id="show-page"?
    <div> Artist: </div>
    <div> <%= concert.artist %> </div>
    <div> Tour: </div>
    <div> <%= concert.tour %> </div>
    <div> Venue: </div>
    <div> <%= concert.venue %> </div>
    <div> Location: </div>
    <div> <%= concert.location %> </div>
    <div> Venue: </div>
    <div> <%= concert.date %> </div>
    <div> Type: </div>
    <div> <%= concert.concertType %> </div>
</section>

<br><h2>Review</h2>
<form id="add-review-form" method="POST"
    action="/concerts/<%= concert._id %>/reviews">
    <label>review:</label>
    <textarea name="content"></textarea>
    <label>Rating:</label>
    <select name="rating">
      <option value="1">1</option>
      <option value="2">2</option>
      <option value="3">3</option>
      <option value="4">4</option>
      <option value="5" selected>5</option>
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet"/>

    <ul class="list-inline rating-list">
      <li><i class="fa fa-star" title="Rate 5"></i></li>
      <li><i class="fa fa-star" title="Rate 4"></i></li>
      <li><i class="fa fa-star" title="Rate 3"></i></li>
      <li><i class="fa fa-star" title="Rate 2"></i></li>
      <li><i class="fa fa-star" title="Rate 1"></i></li>
    </ul>
    <input type="submit" value="add review">
    </form>

    <% if (concert.reviews.length) { %>
      <table>
        <thead>
          <tr>
            <th>User</th>
            <th>Date</th>
            <th>Review</th>
            <th>Rating</th>
            <th>Photos</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% let total = 0 %>
          <% concert.reviews.forEach(function(r) { %>
            <% total += r.rating %>
            <tr>
              <td class="review-user"><img alt="avatar" src="<%= r.userAvatar %>" referrerpolicy="no-referrer" ><%= r.userName %></td>
              <td><%= r.createdAt.toLocaleDateString() %></td>
              <td><%= r.content %></td>
              <td><%= r.rating %></td>
              <td><%= r.photos %></td>
              <td>
                <% if (user?._id.equals(r.user)) { %>
                  <form action="/reviews/<%= r._id %>?_method=DELETE" method="POST">
                    <button id="submit">X</button>
                  </form>
                  <form action="/reviews/<%= r._id %>?_method=PUT" method = "PUT">
                  <button id="edit review">edit review</button>
                  </form>
                <% } %>
              </td>
            </tr>
          <% }); %>
          <tr>
            <td colspan="3"></td>
            <td><strong><%= (total / concert.reviews.length).toFixed(1) %></strong></td>
          </tr>
        </tbody>
      </table>
    <% } else { %>
      <h5>no reviews yet</h5>
    <% } %>

<%- include('../partials/footer') %>